<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Chat</title>
	<link rel="stylesheet" type="text/css" href="assets/style.css">

	<script>
		var name = prompt("Please enter your name");
	</script>
	
</head>
<body>
	
	<form method="">
		<div class="buttonIn">
	        <input type="text" id="message" placeholder="Enter text here" autocomplete="off" required>
	        <button type="button" id="clear">send</button>
	    </div>
    </form>

    <div class="box">
    	<ul class="individual_message"></ul>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>    
	<script>
		var socket = io();

		document.getElementsByTagName('form').submit((e)=>{
			e.preventDefault();
			socket.emit('chat message', (name + ': ' + document.getElementById('message')));

			var node = document.createElement('li');
			var textnode = document.createTextNode()

			document.getElementsByClassName('individual-message').append(<li></li>).innerHTML('You: '+document.getElementById('message'));

		})
	</script>

</body>
</html>